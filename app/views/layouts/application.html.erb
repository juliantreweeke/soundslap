<!DOCTYPE html>
<html>
  <head>

    <title>Soundslap</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>

    <main>


      <header>

        <h1>Sound slap</h1>

      </header>

      <app>

      <nav>
      <h1>Menu</h1>
      <br>
      <%= link_to 'Sounds', sounds_path %>
      <%= link_to 'Upload', new_sound_path %>

          <% unless @current_user.present? %>
          <%= link_to 'Login', login_path %>
          <%= link_to 'Signup', new_user_path %>

          <% else %>
          <p>Hello, <%= link_to @current_user.name, user_path(@current_user) %>
          <%= link_to 'Logout', login_path, method: :delete %>
          </p>
          <% end %>

      </nav>

          <article>
          <%= yield %>
          </article>

          <aside><br>Search</aside>
      </app>
</main>








  </body>
</html>
