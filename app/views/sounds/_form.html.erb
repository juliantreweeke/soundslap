
<%= form_for @sound, html: {multipart: true} do |f| %>

  <%= f.label :sound %>
  <%= f.cl_upload :sound %>
  <br><br>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br><br>

  <%= f.label :info %>
  <%= f.text_field :description %>
  <br><br>

  <%= f.label :tag %>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name, {include_blank: false}, {:multiple => true})%>




  <br><br>

  <br>

  <br>

  <%= f.submit %>

<% end %>
