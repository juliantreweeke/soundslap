
<h2>User Details</h2>

<% if @current_user == @user %>
 <%= link_to 'Edit profile', edit_user_path(@user) %>
<% end %>


<p>Email: <%= @user.email %> </p>

<p>Name: <%= @user.name %> </p>

<img src="<%= @user.image %>" alt="">

<h3>Uploaded Sounds:</h3>
<% @user.sounds.each do |s| %>
<h4><%= link_to s.title, sound_path(s) %></h4>
<% end %>

<div class="sound"></div>
